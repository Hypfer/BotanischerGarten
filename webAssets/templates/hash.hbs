<!doctype html>
<html>
<head>
    <title>{{hash_name}} - {{bot_friendly_name}}</title>
    <link rel="stylesheet" type="text/css" href="/s/plyr.css"/>
    <link rel="stylesheet" type="text/css" href="/s/style.css"/>
    <link rel="icon" type="image/gif" href="/s/favicon.gif"/>

    <meta name="Description" content="{{hash_name}}"/>
    <meta property="og:description" content="{{hash_name}}">
    <meta property="og:image" content="{{domain}}/t/{{hash_db_id}}" />
</head>
<body>
<div class="return"><a href="/" title="home">{{bot_friendly_name}}</a></div>
<div class="controls">
    {{#if first_id}}<a id="first" href="/hash/{{first_id}}">Î±</a>&nbsp;|&nbsp;{{else}}&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}
    {{#if next_id}}
        <a id="next" href="/hash/{{next_id}}"><<-</a>&nbsp;|&nbsp;{{else}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}
    &nbsp;<a id="random" href="/random">random</a>&nbsp;
    {{#if prev_id}}
        &nbsp;| <a id="prev" href="/hash/{{prev_id}}">->></a>{{else}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}
    {{#if last_id}}&nbsp;| <a id="prev" href="/hash/{{last_id}}">Ï‰</a>{{else}}&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}

</div>
<div class="wrapper">
    <div class="medium">

        {{#if image}}
            <a href="/b/{{hash_db_id}}" target="_blank">
                <img src="/b/{{hash_db_id}}" style="{{#if autoSize}}max-width: 640px;height:auto;{{/if}}"
                    {{#if height}} height="{{height}}"{{/if}}{{#if width}} width="{{width}}"{{/if}} />
            </a>
        {{/if}}
        {{#if video}}
            <video id="player" src="/b/{{hash_db_id}}" preload="auto" controls loop
                   style="{{#if autoSize}}max-width: 640px;height:auto;{{/if}}"{{#if height}}
                   height="{{height}}"{{/if}}{{#if width}} width="{{width}}"{{/if}} ></video>
        {{/if}}
        {{#if gif}}
            <video id="player" src="/b/{{hash_db_id}}" preload="auto" loop
                   style="{{#if autoSize}}max-width: 640px;height:auto;{{/if}}"{{#if height}}
                   height="{{height}}"{{/if}}{{#if width}} width="{{width}}"{{/if}} ></video>
        {{/if}}
        {{#if audio}}
            <audio id="player" controls="" loop="" src="/b/{{hash_db_id}}"></audio>
        {{/if}}
        {{#if text}}
            <span style="margin: 20px; font-size: 1.3em" class="texthash">{{text}}</span>
        {{/if}}
        {{#if file}}
            <a style="text-decoration: none;" href="/b/{{hash_db_id}}" target="_blank">
                <div style="font-size:10em;">ðŸ’¾</div>
                <div style="text-align: center; font-size: 2em; margin-top:-20px;">Download</div>
            </a>
        {{/if}}
    </div>
</div>

<div class="panel info">
      <span class="id">Hash: {{hash_name}} | by: <span class="name">
          {{#if user_nickname}}
              <a href="https://telegram.me/{{user_nickname}}" target="_blank">@{{user_nickname}}</a>
          {{/if}}{{user_name}}</span>
          </span><br/>
    {{#if mime}}<span class="mime">mime: {{mime}}</span>&nbsp;<br/>{{/if}}
    {{#if size}}<span class="size">size: {{size}} byte</span><br/>{{/if}}
    <span class="timestamp">{{timestamp}}</span><br>
</div>

<div class="panel info">
    <div class="footer">
        Made with &hearts; in Castrop-Rauxel
    </div>
</div>

<script src="/s/shit.js"></script>
<script src="/s/plyr.js"></script>
<script>plyr.setup({autoplay: "false"});</script>
</body>
</html>
